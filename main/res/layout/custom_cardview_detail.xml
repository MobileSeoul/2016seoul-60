<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    android:layout_margin="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.0"
                android:layout_marginBottom="13dp">
                <ImageView
                    android:id="@+id/detail_card_image_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/card_image"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/detail_card_faborite_btn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@mipmap/ic_faborite_big"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="6dp">

                    <com.example.dudco.ovs_seoulappcompetition.Views.CustomTextView
                        android:id="@+id/detail_card_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        app:font="nanumbarungothic_bold_0.ttf"
                        android:textColor="@color/black"
                        android:text="경복궁"
                        android:layout_marginBottom="1dp"
                        android:layout_marginTop="6dp"
                        />

                    <com.example.dudco.ovs_seoulappcompetition.Views.CustomTextView
                        android:id="@+id/detail_card_sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        app:font="nanumbarungothic_0.ttf"
                        android:text="Gyeongbokgung Palace"
                        android:layout_marginBottom="1dp"
                        />
                    <LinearLayout
                        android:id="@+id/detail_card_star_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="-2dp">
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_star_nonfill"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_star_nonfill"
                            android:layout_marginStart="-2dp"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_star_nonfill"
                            android:layout_marginStart="-2dp"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_star_nonfill"
                            android:layout_marginStart="-2dp"/>
                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_star_nonfill"
                            android:layout_marginStart="-2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
