<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/profile_header"
    app:layout_behavior="">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/profile_header_tint"/>

    <ImageView
        android:id="@+id/profile_header_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.15"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/profile_header_simage"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:padding="20dp"
            android:scaleType="center"/>
        <com.example.dudco.ovs_seoulappcompetition.Views.CustomTextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="헤이즈"
            app:font="nanumbarungothic_bold_0.ttf"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.example.dudco.ovs_seoulappcompetition.Views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font="nanumbarungothic_0.ttf"
                android:text="평균 달성률 :"
                android:textColor="@color/white"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_fill"
                android:id="@+id/imageView2" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_fill"
                android:id="@+id/imageView3" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_fill"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_fill"/>

            <ImageView
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_star_fill"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>